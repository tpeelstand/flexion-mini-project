
@import url('http://fonts.googleapis.com/css?family=Titillium+Web:900|Roboto:400,100')
    
body
  background #000
  background -webkit-linear-gradient(#222, #000)
  background -o-linear-gradient(#222, #000)
  background -moz-linear-gradient(#222, #000)
  background linear-gradient(#222, #000)
  padding 20px
  
  @media screen and (max-width 650px)
      padding 0
      margin 0
      
#miniProject
  font-family 'Roboto', sans-serif
  font-size 16px
  font-weight 400
  width 650px
  min-height 650px
  position relative
  overflow hidden
  color #FFF
  
  @media screen and (max-width 650px)
      width 320px
      background-size 320px auto
      
  h1
    font-weight 100
    font-size 2em
    text-transform uppercase
    margin 0
    position absolute
    top 25px
    left 36px
    
    @media screen and (max-width 650px)
        width 300px
        font-size 1.5em
        top 25px
        left 25px
        
    span
      display block
      font-weight 900
      font-family 'Titillium Web', san-serif
      font-size 1.27em
      line-height 20px
      
      @media screen and (max-width 650px)
        line-height 20px
  h2
    font-size 3em
    margin 0
    font-weight 100
    
    @media screen and (max-width 650px)
        margin 0
  h3
    font-size 2.4em
    margin 0
    font-weight 100
    
    @media screen and (max-width 650px)
        font-size 2.2em
        margin-bottom 15px
  p
    font-size 1.25em
    margin 0 0 14px 0
    font-weight 100
  .progress
      width 550px
      position absolute
      top 120px
      left 40px
      
      @media screen and (max-width 650px)
          width 300px
          top 90px
          left 25px
          
      div
        position relative
        display inline-block
        width 30px
        height 30px
        margin-right 30px
        border-radius 50%
        background-color rgba(255, 255,255, .2)
        transition background-color 1s
        
        @media screen and (max-width 650px)
            width 25px
            height 25px
            margin-right 20px

      div.on
      div.answered
        background-color #efbe5e
      div.correct::after 
        top -5px
        opacity 1
  .btn
    display inline-block
    cursor pointer
    background-color #C04B01
    color #FFF
    text-decoration none
    padding 5px 15px
    border-radius 8px
  .intro
    position absolute
    top 225px
    left 660px
    width 550px
    
    @media screen and (max-width 650px)
      width 285px
      top 160px
      left 330px
    p
      margin 0 0 55px 0
      
      @media screen and (max-width 650px)
          margin-bottom 15px
          
  .question
    width 550px
    position absolute
    top 225px
    left 660px
    
    @media screen and (max-width 650px)
        width 285px
        left 330px
        top 160px
    .txt
      font-size 1.6m
      
      @media screen and (max-width 650px)
          font-size 1.4em
          margin-bottom 15px
      span
          display block
    .ans
      display inline-block
      font-size 1.1em
      width 225px
      border 2px solid rgba(255k, 255, 255, .4)
      border-radius 8px
      padding 10px
      margin 0 15px 15px 0
      position relative
      &.selected
        border-color #be4b16
        &::after
          background-image url(../images/icon_incorrect.svg)
      &.correct
        border-color #459a2e
        &::after
          background-image url(../images/icon_correct.svg)
      &::after
        content ''
        display block
        width 20px
        height 20px
        background no-repeat 0 0
        background-size 20px 20px
        position absolute
        top 5px
        right 5px
    &.unanswered
      .ans
        cursor pointer
        &:hover
          background-color rgba(238, 189, 102, .2)
  .feedback
    color #EFBE5E
    margin-top 50px
    transition opacity 1.5s, margin-top 1.5s
    visibility hidden
    opacity 0
    .btn
      margin-top 5px
    strong
      color #FFF
  .answered
    .feedback
      visibility visible
      opacity 1
      margin-top 10px
  .results 
      position absolute
      top 225px
      left 660px
      width 550px
      
      @media screen and (max-width 650px)
          width 285px
  .active
  .inactive
      transition left 1.5s ease-in-out
  .active
      left 40px
  .intro.inactive
  .inactive.answered {left: -1350px;}
    